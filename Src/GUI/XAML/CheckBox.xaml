<CheckBox
	Name='{Name}'
	HorizontalAlignment='Left'
	VerticalAlignment='Center'
	IsChecked='{Value}'
	FlowDirection='RightToLeft'
	Grid.Column='0'
	Grid.ColumnSpan='2'
	Margin='10,5,0,5'
>
	<TextBlock ToolTip="{Tooltip}" Width='350' FlowDirection='LeftToRight'>{Label} </TextBlock>
	<CheckBox.Resources>
		<Style TargetType='{x:Type Path}'>
			<Setter Property='FlowDirection' Value='LeftToRight' />
		</Style>
	</CheckBox.Resources>
	<CheckBox.ToolTip>
        <TextBlock>{Tooltip}</TextBlock>
    </CheckBox.ToolTip>
</CheckBox>